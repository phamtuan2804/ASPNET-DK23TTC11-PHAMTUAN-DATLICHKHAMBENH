@{
    ViewData["Title"] = "Trang Chủ - Tập Đoàn Y Khoa HealthCare";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <header class="header">
        <div class="container">
            <a href="@Url.Action("TaoMoi", "DatLich")" class="logo">
                <img src="~/images/LogoHealthCare.jpg" alt="Logo HealthCare">
            </a>
            <nav class="main-nav">
                <ul>
                    <li><a href="@Url.Action("TaoMoi", "DatLich")#home" class="active">Trang chủ</a></li>
                    <li><a href="@Url.Action("GioiThieu", "Home")">Giới thiệu</a></li> @* Link đến trang Giới thiệu *@
                    <li><a href="@Url.Action("TaoMoi", "DatLich")#contact">Liên hệ</a></li> @* Link đến phần đặt lịch *@
                </ul>
            </nav>
 @*           <button class="cta-button header-cta" onclick="location.href='@Url.Action("DatLichNgay", "DatLich")'">Liên hệ tư vấn ngay</button> @* <<< ĐÃ CẬP NHẬT LINK *@
            <button class="mobile-menu-toggle">☰</button>
        </div>
    </header>

    <main>
        @* === Phần Hero Section === *@
        <section id="home" class="hero-section">
            <div class="slide-wrapper active">
                <div class="container slide-content">
                    <div class="hero-text">
                        <p class="sub-heading">Theo tiêu chuẩn</p>
                        <p class="brand-name">Tập đoàn Y Khoa <span class="highlight">HealthCare</span></p>
                        <h1>KHÁM SỨC KHỎE ĐỊNH KỲ</h1>
                        <h2>Hãy chăm sóc sức khỏe của bạn mỗi ngày</h2>
                        <ul class="benefits-list">
                            <li>Tận tình tư vấn, giải đáp mọi thắc mắc của khách hàng</li>
                            <li>Nhiệt tình, tận tâm thăm khám, chăm sóc khách hàng như chính người thân</li>
                            <li>Lấy sức khỏe khách hàng làm trung tâm, lấy sự hài lòng của khách hàng làm tiêu chuẩn</li>
                            <li>Hệ thống cơ sở vật chất theo tiêu chuẩn Quốc tế</li>
                            <li>Đội ngũ nhân viên giàu kinh nghiệm và tận tâm</li>
                        </ul>
                        <button class="cta-button" style="background-color: #F1C40F; color: #333; margin-top: 20px;" onclick="location.href='@Url.Action("DatLichNgay", "DatLich")'">ĐẶT LỊCH KHÁM NGAY</button> @* <<< ĐÃ CẬP NHẬT LINK *@
                    </div>
                    <div class="hero-images">
                        <img src="~/images/kham-suc-khoe-1.jpg" alt="Nhân viên y tế" class="img-1">
                        <img src="~/images/kham-suc-khoe-2.jpg" alt="Máy MRI" class="img-2">
                        <img src="~/images/kham-suc-khoe-3.jpg" alt="Tư vấn khám bệnh" class="img-3">
                        <img src="~/images/kham-suc-khoe-4.jpg" alt="Đội ngũ y tế" class="img-4">
                    </div>
                </div>
            </div>
        </section>
        <section id="about-summary-landing" class="about-section" style="background-color: #f9f9f9; padding: 40px 0;">
            <div class="container">
                <h2>Về Chúng Tôi</h2>
                <p style="text-align: center; max-width: 800px; margin: 0 auto 20px auto;">
                    Tập đoàn Y Khoa HealthCare tự hào là đơn vị tiên phong trong lĩnh vực chăm sóc sức khỏe...
                </p>
                <div style="text-align: center;">
                    <a href="@Url.Action("GioiThieu", "Home")" class="cta-button" style="background-color: #8E44AD; color: #fff;">Xem thêm về chúng tôi</a>
                </div>
            </div>
        </section>

    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year. Tập đoàn Y Khoa HealthCare.</p>
        </div>
    </footer>

</body>
</html>
